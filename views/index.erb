<!-- show a list of all articles w links -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Wizard News</title>
    <link rel="stylesheet" href="home.css" />
  </head>

  <body>
    <h1>Wizard News</h1>
    <h2>Articles</h2>

    <table>
      <tr>
        <td><strong>Title</strong></td>
        <td><strong>Description</strong></td>
      </tr>
      <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
          </tr>
      <% end %>
    </table>

    <p>Wizardry needs you!  <a href="/new_article">Contribute</a></p>

  </body>
</html>